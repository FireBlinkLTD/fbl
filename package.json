{
  "name": "fbl",
  "version": "0.2.4",
  "description": "Command Line tool to automate any kind of work. Originally designed to help with deployments.",
  "keywords": [
    "fireblink",
    "fbl",
    "automation",
    "cli",
    "flows"
  ],
  "main": "dist/cli.js",
  "scripts": {
    "tsc": "tsc",
    "rimraf": "rimraf",
    "depcheck": "yarn-check",
    "start": "node dist/src/cli.js",
    "test": "nyc --reporter=html --reporter=text mocha",
    "build": "rimraf ./dist/ && tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "prepublishOnly": "npm run build && npm run lint",
    "precommit": "npm run lint"
  },
  "bin": {
    "fbl": "dist/src/cli.js"
  },
  "author": "FireBlink LTD",
  "license": "MIT",
  "dependencies": {
    "bluebird": "3.5.2",
    "chai-as-promised": "7.1.1",
    "colors": "1.3.2",
    "commander": "2.18.0",
    "ejs": "2.6.1",
    "ejs-lint": "0.3.0",
    "glob-promise": "3.4.0",
    "humanize-duration": "3.15.3",
    "joi": "13.7.0",
    "js-yaml": "3.12.0",
    "jsonschema": "1.2.4",
    "prompts": "1.1.1",
    "reflect-metadata": "0.1.12",
    "requireg": "0.2.1",
    "semver": "5.5.0",
    "shelljs": "0.8.2",
    "tmp-promise": "1.0.5",
    "typedi": "0.8.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.24",
    "@types/chai": "4.1.4",
    "@types/ejs": "2.6.0",
    "@types/joi": "13.6.0",
    "@types/js-yaml": "3.11.2",
    "@types/jsonschema": "1.1.1",
    "@types/node": "10.11.2",
    "@types/semver": "5.5.0",
    "@types/shelljs": "0.8.0",
    "@types/tmp": "0.0.33",
    "chai": "4.1.2",
    "git-pre-commit": "2.1.4",
    "mocha": "5.2.0",
    "mocha-typescript": "1.1.17",
    "mochawesome": "3.0.3",
    "nyc": "12.0.2",
    "rimraf": "2.6.2",
    "source-map-support": "0.5.6",
    "tslint": "5.11.0",
    "typescript": "2.9.2",
    "yarn-check": "0.0.3"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "all": true,
    "include": [
      "dist/src/**/*.js"
    ],
    "exclude": [
      "dist/src/interfaces/**/*.js",
      "dist/src/**/index.js",
      "dist/test/**/*.js"
    ]
  },
  "contributors": [
    {
      "name": "Vladyslav Tkachenko",
      "email": "vlad@fireblink.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FireBlinkLTD/fbl.git"
  }
}
