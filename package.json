{
  "name": "fbl",
  "version": "1.4.0",
  "description": "Command Line tool to automate any kind of work. Originally designed to help with deployments.",
  "keywords": [
    "fireblink",
    "fbl",
    "automation",
    "automations",
    "cli",
    "flows",
    "flow",
    "deployments",
    "deployment",
    "routine"
  ],
  "engines": {
    "node": ">=8.12.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "commit": "npx git-cz",
    "start": "node dist/src/cli.js",
    "test": "rimraf ./coverage/ && nyc --reporter=html --reporter=text mocha",
    "build": "rimraf ./dist/ && tsc",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "prettier src/**/*.{md,ts,json} test/**/*.{md,ts,json} index.{md,ts,json} --write --config .prettierrc.yml && tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts' 'index.ts' --fix",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "fbl": "dist/src/cli.js"
  },
  "author": "FireBlink LTD",
  "license": "MIT",
  "dependencies": {
    "cliui": "4.1.0",
    "colors": "1.3.3",
    "commander": "2.19.0",
    "deep-object-diff": "1.1.0",
    "ejs": "2.6.1",
    "ejs-lint": "0.3.0",
    "glob-promise": "3.4.0",
    "got": "9.5.0",
    "humanize-duration": "3.17.0",
    "joi": "14.3.1",
    "js-yaml": "3.12.1",
    "jsonschema": "1.2.4",
    "prompts": "2.0.1",
    "requireg": "0.2.1",
    "semver": "5.6.0",
    "shelljs": "0.8.3",
    "table": "5.1.1",
    "tar": "4.4.8",
    "tmp-promise": "1.0.5",
    "typedi": "0.8.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@types/chai": "4.1.7",
    "@types/ejs": "2.6.1",
    "@types/got": "9.3.0",
    "@types/joi": "14.0.1",
    "@types/js-yaml": "3.11.4",
    "@types/node": "10.12.18",
    "@types/semver": "5.5.0",
    "@types/shelljs": "0.8.1",
    "@types/table": "4.0.5",
    "@types/tar": "4.0.0",
    "@types/tmp": "0.0.33",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "commitizen": "3.0.5",    
    "jsonlint": "1.6.3",
    "lint-staged": "8.1.0",
    "husky": "1.3.1",
    "mocha": "5.2.0",
    "mocha-typescript": "1.1.17",
    "mochawesome": "3.1.1",
    "nyc": "13.1.0",
    "prettier": "1.15.3",
    "rimraf": "2.6.3",
    "source-map-support": "0.5.9",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",    
    "typescript": "3.2.2"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "all": true,
    "include": [
      "dist/src/**/*.js"
    ],
    "exclude": [
      "dist/src/interfaces/**/*.js",
      "dist/src/**/index.js",
      "dist/test/**/*.js"
    ]
  },
  "contributors": [
    {
      "name": "Vladyslav Tkachenko",
      "email": "vlad@fireblink.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FireBlinkLTD/fbl.git"
  },
  "homepage": "https://fbl.fireblink.com"
}
