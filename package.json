{
  "name": "fbl",
  "version": "1.3.1",
  "description": "Command Line tool to automate any kind of work. Originally designed to help with deployments.",
  "keywords": [
    "fireblink",
    "fbl",
    "automation",
    "automations",
    "cli",
    "flows",
    "flow",
    "deployments",
    "deployment",
    "routine"
  ],
  "engines": {
    "node": ">=8.12.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "tsc": "tsc",
    "rimraf": "rimraf",
    "depcheck": "yarn-check",
    "gitbook": "gitbook",
    "docs:prepare": "gitbook install",
    "docs:watch": "yarn docs:prepare && gitbook serve",
    "start": "node dist/src/cli.js",
    "test": "nyc --reporter=html --reporter=text mocha",
    "build": "rimraf ./dist/ && tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "bin": {
    "fbl": "dist/src/cli.js"
  },
  "author": "FireBlink LTD",
  "license": "MIT",
  "dependencies": {
    "cliui": "4.1.0",
    "colors": "1.3.3",
    "commander": "2.19.0",
    "deep-object-diff": "1.1.0",
    "ejs": "2.6.1",
    "ejs-lint": "0.3.0",
    "glob-promise": "3.4.0",
    "got": "9.4.0",
    "humanize-duration": "3.16.0",
    "joi": "14.3.0",
    "js-yaml": "3.12.0",
    "jsonschema": "1.2.4",
    "prompts": "2.0.0",
    "requireg": "0.2.1",
    "semver": "5.6.0",
    "shelljs": "0.8.3",
    "table": "5.1.1",
    "tar": "4.4.8",
    "tmp-promise": "1.0.5",
    "typedi": "0.8.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/ejs": "2.6.1",
    "@types/got": "9.2.1",
    "@types/joi": "14.0.1",
    "@types/js-yaml": "3.11.2",
    "@types/node": "10.12.14",
    "@types/semver": "5.5.0",
    "@types/shelljs": "0.8.1",
    "@types/table": "4.0.5",
    "@types/tar": "4.0.0",
    "@types/tmp": "0.0.33",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "gitbook-cli": "2.3.2",
    "husky": "1.2.0",
    "mocha": "5.2.0",
    "mocha-typescript": "1.1.17",
    "mochawesome": "3.1.1",
    "nyc": "13.1.0",
    "rimraf": "2.6.2",
    "source-map-support": "0.5.9",
    "tslint": "5.11.0",
    "typescript": "3.2.2",
    "yarn-check": "0.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn outdated"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "all": true,
    "include": [
      "dist/src/**/*.js"
    ],
    "exclude": [
      "dist/src/interfaces/**/*.js",
      "dist/src/**/index.js",
      "dist/test/**/*.js"
    ]
  },
  "contributors": [
    {
      "name": "Vladyslav Tkachenko",
      "email": "vlad@fireblink.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FireBlinkLTD/fbl.git"
  },
  "homepage": "https://fbl.fireblink.com"
}
